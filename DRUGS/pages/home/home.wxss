/* pages/home/home.wxss */
swiper image{
  /* vw:视口宽度 */
  width: 100vw;
}
swiper{
  height: calc(100vw * 720/2250);
}
/* 子绝父相 */
.banner{
  position: relative;
}
.dots{
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  /* 弹性布局 */
  display: flex;
}
.dots view{
  width: 20rpx;
  height: 20rpx;
  background-color: #666;
  border-radius: 50%;
  margin-left: 10rpx;
}
/* 当前项的样式 */
.dots view.active{
  background-color: blue;
}
/* 标题 */
.title{
  position: relative;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
}
.line{
  width: 40%;
  height: 4rpx;
  background-color: #666;
  /* 子盒子在父盒子上水平垂直方向都居中 */
  position: absolute;
  left: 0;right: 0;top: 0;bottom: 0;
  margin: auto;
}
.txt{
  width: 30%;
  height: 100rpx;
  background-color: #fff;
    /* 子盒子在父盒子上水平垂直方向都居中 */
    position: absolute;
    left: 0;right: 0;top: 0;bottom: 0;
    margin: auto;
    /* 文字居中 */
    text-align: center;
    line-height: 100rpx;
}
/* 滚动块 */
.scroll{
  /* 不换行 */
  white-space: nowrap;
  height: 500rpx;
}
.sc{
  /* 不换行 */
  display: inline-block;
  width: 42%;
  height: 480rpx;
  margin: 0 1%;
  border-radius: 10rpx;
  /* 阴影 */
  box-shadow: 0 5rpx 10rpx #ccc;
}
.sc view{
  margin: 3%;
}
.sc image{
  width: 100%;
  height: 300rpx;
}
.test{
  display: block;
  text-align: center;
  color: #000;
}
.price{
  display: block;
  font-size: 26rpx;
  color: rgb(247, 51, 51);
}
.xiaoliang{
  display: flex;
}
.xiaoliang image{
  width: 40rpx;
  height: 40rpx;
  margin-left: 56%;
}
.vip image{
  border-radius: 20rpx;
  width: 80%;
  height: 100rpx;
  margin-left: 10%;
}

.product{
  display: flex;
  /* 放不下就换线 */
  flex-wrap: wrap;
  padding: 20rpx;
  border-top: 1rpx solid #666;
  /* 对齐方式 */
  justify-content: space-between;
}
.icon{
  display: flex;
  /* 放不下就换线 */
  flex-wrap: wrap;
  padding: 20rpx;
  border-top: 1rpx solid #666;
  /* 对齐方式 */
  justify-content: space-between;
}
.pro_sc{
  width: 15%;
  height: 140rpx;
  border-radius: 10rpx;
  margin: 3%;
  margin-bottom: 20rpx;
}
.pro_sc image{
  width: 100rpx;
  height: 80rpx;
}
.pro_sc view{
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  font-size: 24rpx;
}
.pro_box{
  width: 49%;
  height: 520rpx;
  border-radius: 10rpx;
  box-shadow: 0 0 10rpx #ccc;
  margin-bottom: 20rpx;
}

.pro_box image{
  width: 100%;
  height: 400rpx;
}
.pro_box .imgxl{
  display: flex;
}
.pro_box .imgxl image{
  width: 40rpx;
  height: 40rpx;
  margin-left: 62%;
}
.pro_box view{
  height: 50rpx;
  line-height: 50rpx;
  margin: 1%;
}
text{
  font-size: 26rpx;
  color: #666;
}





